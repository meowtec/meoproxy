{
  "rules": {
    "class-name": true,
    "curly": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "no-var-keyword": true,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": "never",
    "whitespace": [
      true,
      "check-branch",
      "check-operator",
      "check-separator",
      "check-type",
      "check-module",
      "check-decl"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-inferrable-types": true,
    "no-unused-variable": true,
    "no-use-before-declare": true,
    "no-require-imports": true,
    "no-shadowed-variable": true,
    "no-trailing-whitespace ": true,
    "no-unreachable": true,
    "radix": true
  }
}
